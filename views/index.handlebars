<h1>Burger Time!</h1>
<img src="../../public/assets/img/burger.PNG">
<ul>
  {{#each burgers}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{!-- {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}} --}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
