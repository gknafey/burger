
<head>
	<meta charset="UTF-8">
		<title>Burgers</title>
		<script src="https://code.jquery.com/jquery.js"></script>
		<script src="../../public/assets/js/burger.js"></script>
		<link rel="stylesheet" href="../public/assets/css/burger_style.css" type="text/css">
	</head>
<div class="container bg">
<h1 style="background-color: rgb(238, 167, 85); padding: 20px 0 20px 0;">Burger Time!</h1>


<div class="burgs">
<ul style="background-color: rgb(221, 0, 0); color: whitesmoke">
  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
</ul>
</div>
<div class="burgs">
<ul style="background-color: rgb(92, 36, 15); color:rgb(253, 250, 51)">
  {{#each burgers}}
   {{#if this.devoured}}
    <li>
      {{this.id}}
      {{this.burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>
</div>
<h2 style="background-color: rgb(73, 228, 1)">Add a Burger</h2>
<form style="background-color:  rgb(238, 167, 85)" class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p>Enter a burger and Submit to place the order!</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary" type="submit">Submit Order</button>
			</form>
</div>